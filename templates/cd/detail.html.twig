{% extends 'base.html.twig' %}

{% block title %}Detail CD - {{ cd.title }} | {{ parent() }}{% endblock %}
{% block metaDescription %}This is detail of CD called {{ cd.title }} made by {{ cd.artist }} and released in year {{ cd.releaseYear|date("Y") }} {% endblock %}

{% block body %}
    <div class="my-5 mx-5 border border-dark">
        <table class="table table-striped">
            <thead>
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Obrázek</th>
                <th scope="col">Název CD</th>
                <th scope="col">Interpret</th>
                <th scope="col">Album</th>
                <th scope="col">Žánr</th>
                <th scope="col">Rok vydání</th>
                <th scope="col">Cena</th>
                <th scope="col">Hodnocení</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <tr class="text-center">
                <td scope="row">
                    {{ cd.id }}
                </td>
                <td scope="row">
                    {% if cd.image %}
                     <img src="{{ asset('build/images/cds/' ~ cd.image ) }}">
                    {% endif %}
                </td>
                <td>
                    {{ cd.title }}
                </td>
                <td>
                    {{ cd.artist }}
                </td>
                <td>
                    {{ cd.album }}
                </td>
                <td>
                    {{ cd.genre }}
                </td>
                <td>
                    {{ cd.releaseYear|date("d.m.Y") }}
                </td>
                <td>
                    {{ cd.price }}
                </td>
                <td>
                    {{ cd.rating }}
                </td>
                <td class="text-end">
                    <a href="{{ path('cd_edit', { id: cd.id } ) }}" class="btn btn-warning">Upravit</a>
                    <a href="{{ path('cd_delete', { id: cd.id } ) }}" class="btn btn-danger">Smazat</a>
                </td>
            </tr>
            </tbody>
        </table>
        <hr>
        <a href="/">Go back</a>

    </div>
{% endblock %}